<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AA121111"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="Hủy"
            android:textColor="#0D7FEF"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Sửa Sinh Viên"
            android:textColor="#F3F5F6"
            android:textSize="20dp" />

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="Xong"
            android:textColor="#0D7FEF"
            android:textSize="16dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#777676"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/edt_name"
            android:backgroundTint="#777676"
            android:textColor="#ffff"
            android:textColorHint="#B5B2B2"
            android:hint="Họ Và Tên"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/edt_phoneNumber"
            android:backgroundTint="#777676"
            android:textColor="#ffff"
            android:textColorHint="#B5B2B2"
            android:hint="Số Điện Thoại"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/edt_dOfBirth"
            android:backgroundTint="#777676"
            android:textColor="#ffff"
            android:textColorHint="#B5B2B2"
            android:hint="Năm Sinh"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/edt_major"
            android:backgroundTint="#777676"
            android:textColor="#ffff"
            android:textColorHint="#B5B2B2"
            android:hint="Chuyên Ngành"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/edt_level"
            android:backgroundTint="#777676"
            android:textColor="#ffff"
            android:textColorHint="#B5B2B2"
            android:hint="Hệ"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#777676"/>

</LinearLayout>