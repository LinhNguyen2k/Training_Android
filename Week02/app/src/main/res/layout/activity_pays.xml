<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
   style="@style/layout_match_parent"
    android:fillViewport="true"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f9f9f9"

        android:minHeight="830dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line1"
            style="@style/Guideline_horizontal"
            app:layout_constraintGuide_percent="0.079" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line2"
            style="@style/Guideline_horizontal"
            app:layout_constraintGuide_percent="0.04" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line3"
            style="@style/Guideline_vertical"
            app:layout_constraintGuide_percent="0.12" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line4"
            style="@style/Guideline_vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line5"
            style="@style/Guideline_vertical"
            app:layout_constraintGuide_percent="0.55" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line6"
            style="@style/Guideline_vertical"
            app:layout_constraintGuide_percent="0.95" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line7"
            style="@style/Guideline_horizontal"
            app:layout_constraintGuide_percent="0.115" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line8"
            style="@style/Guideline_horizontal"
            app:layout_constraintGuide_percent="0.376" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line9"
            style="@style/Guideline_vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line10"
            style="@style/Guideline_horizontal"
            app:layout_constraintGuide_percent="0.45" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line11"
            style="@style/Guideline_horizontal"
            app:layout_constraintGuide_percent="0.8" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line12"
            style="@style/Guideline_horizontal"
            app:layout_constraintGuide_percent="0.86" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line13"
            style="@style/Guideline_horizontal"
            app:layout_constraintGuide_percent="0.93" />

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_group_8"
            app:layout_constraintLeft_toLeftOf="@id/line9"
            app:layout_constraintTop_toTopOf="@id/line2" />

        <TextView
            style="@style/TextView_Edit_Pay_textMedium"
            android:layout_marginLeft="45dp"
            android:gravity="center_vertical"
            android:text="Revisar y enviar"
            app:layout_constraintBottom_toBottomOf="@id/line1"
            app:layout_constraintLeft_toLeftOf="@id/img_back"
            app:layout_constraintRight_toRightOf="@id/line5"
            app:layout_constraintTop_toTopOf="@id/line2" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_infoUser"
            style="@style/layout_zero"
            app:cardCornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="@id/line8"
            app:layout_constraintLeft_toLeftOf="@id/line9"
            app:layout_constraintRight_toRightOf="@id/line6"
            app:layout_constraintTop_toTopOf="@+id/line7">

            <RelativeLayout
               style="@style/layout_match_parent"
                android:background="#FFFFFF"
                android:paddingLeft="30dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                app:layout_constraintLeft_toLeftOf="@id/line9"
                app:layout_constraintRight_toRightOf="@id/line6"
                app:layout_constraintTop_toTopOf="@+id/line7">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_user"
                    style="@style/layout_default"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/bitmap_copy_5" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_nameInfo"
                    style="@style/TextView_Edit_Pay_textBould"
                    android:layout_below="@+id/cv_user"
                    android:layout_marginTop="6dp"
                    android:text="David Paz " />

                <TextView
                    android:id="@+id/tv_email"
                    style="@style/layout_default"
                    android:layout_below="@+id/tv_nameInfo"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="davidpaz@correo.com "
                    android:textColor="#999999"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_Mensaje"
                    style="@style/layout_default"
