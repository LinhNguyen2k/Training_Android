                    android:textColor="#666666"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/img_edit"
                    style="@style/layout_default"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/montserrat_semibold"
                    android:src="@drawable/ic_shape1"
                    android:textColor="#000000"
                    android:textSize="10sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bnt_money"
                    style="@style/layout_default"
                    android:layout_below="@+id/cv_user"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="70dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/custom_btn_money"
                    android:fontFamily="@font/montserrat_semibold"
                    android:left="@+id/img_edit"
                    android:minWidth="140dp"
                    android:text="20,00â‚¬"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/layout_zero"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="@id/line11"
            app:layout_constraintLeft_toLeftOf="@id/line9"
            app:layout_constraintRight_toRightOf="@id/line6"
            app:layout_constraintTop_toTopOf="@id/line10">

            <LinearLayout
                style="@style/layout_match_parent"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <TextView
                        style="@style/TextView_Edit_Pay_textBould"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:text="Tipo de pago " />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        android:gravity="right|center_vertical"
                        android:text="Personal "
                        android:textColor="#1b1b1b"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="right|center_vertical">

                        <ImageView
                            style="@style/layout_default"
                            android:src="@drawable/ic_keyboard_arrow_right_black_18_dp_copy_2" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layerType="software"
                    android:src="@drawable/custom_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4.5"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            style="@style/layout_default"
                            android:src="@drawable/ic_bitmap_copy" />

                        <LinearLayout
                            style="@style/layout_default"
                            android:layout_marginLeft="15dp"
                            android:orientation="vertical">

                            <TextView
                                style="@style/layout_default"
                                android:fontFamily="@font/semibold"
                                android:text="BBVA"
                                android:textColor="#1b1b1b"
                                android:textSize="18sp" />

                            <TextView
                                style="@style/layout_default"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="****9889"
                                android:textColor="#999999"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="right|center_vertical">

                        <ImageView
                            style="@style/layout_default"
                            android:src="@drawable/ic_keyboard_arrow_right_black_18_dp_copy_2" />
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layerType="software"
                    android:src="@drawable/custom_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <TextView
                        style="@style/TextView_Edit_Pay_textBould"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="Tarifas por transacciÃ³n " />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_semibold"
                        android:gravity="right"
                        android:text="0,00â‚¬ "
                        android:textColor="#666666"
                        android:textSize="18sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layerType="software"
                    android:src="@drawable/custom_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:measureWithLargestChild="true"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <TextView
                        style="@style/TextView_Edit_Pay_textBould"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3.5"
                        android:gravity="center_vertical"
                        android:text="TÃº pagas " />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:fontFamily="@font/montserrat_semibold"
                        android:gravity="right"
                        android:text="20,00â‚¬"
                        android:textColor="#00d090"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_enviar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/custom_btn_ahora"
            android:text="ENVIAR AHORA"
            android:textColor="#ffffff"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/line13"
            app:layout_constraintLeft_toLeftOf="@id/line9"
            app:layout_constraintRight_toRightOf="@id/line6"
            app:layout_constraintTop_toTopOf="@id/line12" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>