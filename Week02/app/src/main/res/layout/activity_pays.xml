<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        tools:context=".Pays"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.079" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.026" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.15" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.115" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.376" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.45" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.86" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/line13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.93" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_group_8"
            app:layout_constraintBottom_toBottomOf="@id/line1"
            app:layout_constraintLeft_toLeftOf="@id/line4"
            app:layout_constraintRight_toRightOf="@id/line3"
            app:layout_constraintTop_toTopOf="@id/line2" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center_vertical"
            android:text="Revisar y enviar"
            android:textColor="#1b1b1b"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/line1"
            app:layout_constraintLeft_toLeftOf="@id/line3"
            app:layout_constraintRight_toRightOf="@id/line5"
            app:layout_constraintTop_toTopOf="@id/line2" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_infoUser"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="5dp"
            app:layout_constraintBottom_toBottomOf="@id/line8"
            app:layout_constraintLeft_toLeftOf="@id/line9"
            app:layout_constraintRight_toRightOf="@id/line6"
            app:layout_constraintTop_toTopOf="@+id/line7">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f6f8fa"
                android:padding="25dp"
                app:layout_constraintLeft_toLeftOf="@id/line9"
                app:layout_constraintRight_toRightOf="@id/line6"
                app:layout_constraintTop_toTopOf="@+id/line7">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/bitmap_copy_5" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_nameInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cv_user"
                    android:layout_marginTop="6dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="David Paz "
                    android:textColor="#1b1b1b"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_nameInfo"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="davidpaz@correo.com "
                    android:textColor="#999999"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_Mensaje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_email"
                    android:layout_marginTop="10dp"
                    android:text="Mensaje"
                    android:textColor="#1b1b1b"
                    android:textSize="10sp" />

                <TextView

                    android:id="@+id/tv_detall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_Mensaje"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Este es el dinero de la entradasâ€¦"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/img_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/montserrat_semibold"
                    android:src="@drawable/ic_shape1"
                    android:textColor="#000000"
                    android:textSize="10sp" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bnt_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cv_user"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginBottom="30dp"
                    android:layout_toRightOf="@+id/tv_email"
                    android:background="@drawable/custom_btn_money"
                    android:fontFamily="@font/montserrat_semibold"
                    android:left="@+id/img_edit"
                    android:text="20,00â‚¬" />
                <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_Mensaje"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tv_detall"
                    tools:text="ðŸŽ¬" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintTop_toTopOf="@id/line10"
            app:layout_constraintBottom_toBottomOf="@id/line11"
            app:layout_constraintLeft_toLeftOf="@id/line9"
            app:layout_constraintRight_toRightOf="@id/line6">
            <LinearLayout
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="4">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="5">
                    <TextView
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Tipo de pago "
                        android:textColor="#1b1b1b"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="right|center_vertical"
                        android:text="Personal "
                        android:textColor="#1b1b1b"
                        android:textSize="16sp" />
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_keyboard_arrow_right_black_18_dp_copy_2"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:src="@drawable/custom_line"
                    android:layerType="software" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="5">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_bitmap_copy"/>
                        <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/semibold"
                                android:text="BBVA"
                                android:textColor="#1b1b1b"
                                android:textSize="16sp" />
                            <TextView
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="****9889"
                                android:textColor="#999999"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_gravity="right|center_vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_keyboard_arrow_right_black_18_dp_copy_2"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:src="@drawable/custom_line"
                    android:layerType="software" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="5">
                    <TextView
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Tipo de pago "
                        android:textColor="#1b1b1b"
                        android:textSize="14sp" />
                    <ImageView
                        android:layout_gravity="right|center_vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_keyboard_arrow_right_black_18_dp_copy_2"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:src="@drawable/custom_line"
                    android:layerType="software" />
                <LinearLayout
                    android:measureWithLargestChild="true"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="5">
                    <TextView
                        android:layout_weight="3.5"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="TÃº pagas "
                        android:textColor="#1b1b1b"
                        android:textSize="14sp" />
                    <TextView
                        android:gravity="center_vertical"
                        android:layout_weight="1.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="20,00â‚¬"
                        android:textSize="20sp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textColor="#00d090"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="ENVIAR AHORA"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:background="@drawable/custom_btn_ahora"
            app:layout_constraintTop_toTopOf="@id/line12"
            app:layout_constraintRight_toRightOf="@id/line6"
            app:layout_constraintLeft_toLeftOf="@id/line9"
            app:layout_constraintBottom_toBottomOf="@id/line13"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>