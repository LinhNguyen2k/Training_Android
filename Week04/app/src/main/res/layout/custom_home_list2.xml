<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRevealLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:dragEdge="right"
    app:mode="same_level">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layoutDelete"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:background="#DD2F2F"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/delete"
            android:layout_gravity="center"/>
        <TextView
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="delete"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </LinearLayout>

<RelativeLayout
    android:paddingRight="10dp"
    android:id="@+id/layout_custom"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tv_one_list2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello"
        android:textSize="18sp"
        android:fontFamily="@font/raleway_black"
        android:textColor="#676767" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/tv_two_list2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_one_list2"
        android:fontFamily="@font/lato_regular"
        android:text="hello"
        android:textColor="#4d4d4d"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_three_list2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_radius_info2"
        android:fontFamily="@font/raleway_regular"
        android:text="hello"
        android:textColor="#020202"
        android:textSize="14sp" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv_four_list2"
        android:layout_below="@+id/tv_three_list2"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello"
        android:textSize="14sp"
        android:fontFamily="@font/lato_regular"
        android:textColor="#222222"
        />


</RelativeLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>