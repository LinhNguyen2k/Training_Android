<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line1"
        style="@style/Guideline_vertical"
        app:layout_constraintGuide_percent="0.04" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line2"
        style="@style/Guideline_horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line3"
        style="@style/Guideline_horizontal"
        app:layout_constraintGuide_percent="0.67" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line4"
        style="@style/Guideline_horizontal"
        app:layout_constraintGuide_percent="0.3" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line5"
        style="@style/Guideline_horizontal"
        app:layout_constraintGuide_percent="0.45" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line6"
        style="@style/Guideline_vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line7"
        style="@style/Guideline_horizontal"
        app:layout_constraintGuide_percent="0.72" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/line8"
        style="@style/Guideline_horizontal"
        app:layout_constraintGuide_percent="0.9" />
    <TextView
        android:id="@+id/tv_skip"
        android:fontFamily="@font/lato_regular"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="50dp"
        android:layout_marginTop="68dp"
        android:text="Skip"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/ic_tracciato_865"
        app:layout_constraintTop_toTopOf="@id/line4"
        app:layout_constraintBottom_toBottomOf="@id/line5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/line1"
        android:scaleType="fitXY"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/line2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/line3"
        android:src="@drawable/ic_gruppo_di_maschere_4"/>
    <TextView
        android:id="@+id/tv_start"
        android:fontFamily="@font/raleway_black"
        android:textSize="28sp"
        android:textColor="#3e3e3e"
        app:layout_constraintLeft_toLeftOf="@id/line6"
        app:layout_constraintTop_toTopOf="@id/line7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start to invest"/>

    <TextView
        android:id="@+id/tv_future"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_black"
        android:textColor="#3e3e3e"
        android:textSize="28sp"
        app:layout_constraintLeft_toLeftOf="@id/line6"
        app:layout_constraintTop_toBottomOf="@id/tv_start"
        android:text="for your future!" />

    <TextView
        android:id="@+id/tv_incidunt"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_light"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/line6"
        app:layout_constraintTop_toBottomOf="@id/tv_future"
        android:text="Ex totam praesentium incidunt aut."/>
    <View
        android:id="@+id/view_1"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toTopOf="@id/line8"
        app:layout_constraintLeft_toLeftOf="@id/line6"
        android:background="@drawable/custom_load"
        android:layout_width="38dp"
        android:layout_height="9dp"/>
    <View
        android:id="@+id/view_2"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@id/line8"
        app:layout_constraintLeft_toRightOf="@id/view_1"
        android:background="@drawable/custom_load_radius"
        android:layout_width="8dp"
        android:layout_height="8dp"/>
    <View
        android:id="@+id/view_3"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="@id/line8"
        app:layout_constraintLeft_toRightOf="@id/view_2"
        android:background="@drawable/custom_load_radius"
        android:layout_width="8dp"
        android:layout_height="8dp"/>
    <TextView
        android:id="@+id/tv_nextBoarding1"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:fontFamily="@font/lato_black"
        android:background="@drawable/custom_login_button"
        app:layout_constraintLeft_toLeftOf="@id/view_3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.927"
        app:layout_constraintHorizontal_bias="0.65"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="NEXT"/>
</androidx.constraintlayout.widget.ConstraintLayout>